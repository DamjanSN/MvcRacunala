@model MvcRacunala.Models.Racunala

@{
    ViewData["Title"] = "Create";
}

<h1>Novi unos</h1>

<h4>Dodajte podatke o računalu koje će se dati korisniku na posudbu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumIzdavanja" class="control-label"></label>
                <input asp-for="DatumIzdavanja" class="form-control" />
                <span asp-validation-for="DatumIzdavanja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vrsta" class="control-label"></label>
                <input asp-for="Vrsta" class="form-control" />
                <span asp-validation-for="Vrsta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cijena" class="control-label"></label>
                <input asp-for="Cijena" class="form-control" />
                <span asp-validation-for="Cijena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stanje" class="control-label"></label>
                <input asp-for="Stanje" class="form-control" />
                <span asp-validation-for="Stanje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Stvori" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Povratak na listu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
